{
  "name": "emona-textile-frontend",
  "version": "1.0.0",
  "private": true,
  "license": "BSD 3-Clause",
  "repository": {
    "type": "git",
    "url": "git@github.com:mariukhin/emona_textile.git"
  },
  "author": "Maksym Mariukhin",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --mode development --open",
    "build": "cross-env NODE_ENV=production webpack --mode production",
    "stats": "webpack --json > stats.json && webpack-bundle-analyzer stats.json",
    "lint": "eslint \"./src/**/*.ts\" \"./src/**/*.tsx\" --fix",
    "prettier": "prettier --write \"./src/**/*.{js,jsx,css}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn lint:js && yarn lint:css"
    }
  },
  "lint-staged": {
    "*.(js|jsx)": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "ie >= 9"
  ],
